---
import BlogNavigation from "../components/BlogNavigation.astro";
import PostsList from "../components/PostsList";
import BaseLayout from "../layouts/BaseLayout.astro";

// Import all posts
const allPosts = Object.values(
  import.meta.glob("./posts/*.md", { eager: true })
);

const postsLatest = allPosts
  .map((post) => {
    const dateObj = post.frontmatter.date
      ? new Date(post.frontmatter.date)
      : null;
    const slug = post.file.split("/").pop().replace(".md", "");
    return {
      ...post,
      url: `/posts/${slug}`,
      dateObj,
    };
  })
  .sort((a, b) => b.dateObj - a.dateObj);

const postsOldest = [...postsLatest].reverse();

const pageTitle = "Blog Posts";
---

<BaseLayout pageTitle={pageTitle}>
  <BlogNavigation />
  <section class="blog-posts-container">
    <PostsList
      postsLatest={postsLatest}
      postsOldest={postsOldest}
      client:load
    />
  </section>
</BaseLayout>

<style is:global>
  .blog-posts-container {
    padding: 2rem 4rem 4rem;
    font-size: 1rem;
    line-height: 1.6;
    margin-top: 2rem;
  }

  .sorting-section {
    /* background-color: bisque; */
    display: flex;
    justify-content: end;
    font-size: 0.8rem;
    margin-bottom: 1rem;
  }

  .sort-btns-container{
    display: flex;
    justify-content: end;
  }

  .sort {
    margin-left: 1rem;
    border: none;
    background-color: transparent;
    cursor: pointer;
  }

  .sort.active {
    background-color: rgba(210, 190, 255, 0.2);
    text-decoration: underline 1px #222;
  }

  .post-card {
    padding: 1rem 0;
  }

  .post-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 0.5rem;
  }

  .post-title {
    font-size: 0.9rem;
    font-weight: bold;
    text-decoration: none;
    color: inherit;
  }

  .post-title:hover {
    text-decoration: underline;
  }

  .post-date {
    font-size: 0.875rem;
    color: #555;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 0.5rem;
  }

  .tag {
    font-size: 0.75rem;
    padding: 0.2rem 0.5rem;
    border-radius: 5px;
    background-color: rgba(95, 158, 160, 0.15);
    color: #2a5555;
  }

  .post-separator {
    border: none;
    border-bottom: 1px solid rgba(0, 0, 0, 0.1);
    margin-top: 0.5rem;
  }

  @media (max-width: 480px) {
    .blog-posts-container {
      padding: 2rem 2rem 4rem;
      margin-top: 3rem;
    }
    .sorting-section {
      justify-content: space-between;
    }
  }
</style>
